{
  "name": "prettier-hook",
  "version": "0.5.0",
  "author": "Suguru Motegi",
  "license": "MIT",
  "main": "index.js",
  "private": true,
  "bin": "./bin/prettier-hook.js",
  "scripts": {
    "build": "tsp build"
  },
  "homepage": "https://github.com/suguru03/prettier-hook",
  "dependencies": {
    "minimist": "^1.2.5",
    "vm-agent": "^0.6.0"
  },
  "peerDependencies": {
    "prettier": ">= 2.0.2"
  },
  "devDependencies": {
    "@types/node": "^13.9.8",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.1",
    "ts-publisher": "^0.2.1",
    "tslint": "^5.20.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
