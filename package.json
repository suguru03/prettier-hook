{
  "name": "prettier-hook",
  "version": "0.3.2",
  "author": "Suguru Motegi",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "prettier-hook": "./bin/prettier-hook"
  },
  "scripts": {
    "build": "rm -rf dist && tsc && npm run copy",
    "copy": "cp package.json dist && cp README.md dist && chmod 755 dist/bin/*.js"
  },
  "homepage": "https://github.com/suguru03/prettier-hook",
  "files": [
    "README.md",
    "bin",
    "hooks",
    "utils"
  ],
  "dependencies": {
    "vm-agent": "^0.5.7"
  },
  "peerDependencies": {
    "prettier": ">= 1.13.7"
  },
  "devDependencies": {
    "@types/node": "^10.12.24",
    "husky": "^0.14.3",
    "lint-staged": "^8.1.5",
    "minimist": "^1.2.0",
    "prettier": "^1.13.7",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
